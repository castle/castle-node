{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noEmitHelpers": false,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "exclude": ["**/*.spec.ts", "dist", "node_modules"]
}
