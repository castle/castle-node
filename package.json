{
  "$schema": "http://json.schemastore.org/package",
  "name": "@castleio/sdk",
  "version": "0.4.6",
  "main": "dist/index.js",
  "repository": "git@github.com:castle/castle-node.git",
  "author": "castle.io",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rimraf dist",
    "lint": "tslint -c tslint.json --fix 'src/**/*.ts'",
    "build": "tsc",
    "start": "tsc -w",
    "test": "mocha -r ts-node/register test/**/*.ts",
    "prettier": "prettier --write --parser typescript src/**/*.ts",
    "prettier-check": "yarn prettier --list-different --parser typescript src/**/*.ts",
    "prepush": "yarn build && yarn lint && yarn prettier-check",
    "prepublishOnly": "yarn build"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn prepush"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.5",
    "@types/chai-as-promised": "^7.1.2",
    "@types/fetch-mock": "^7.3.2",
    "@types/lodash": "^4.14.148",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.17.5",
    "@types/node-fetch": "^2.5.3",
    "@types/pino": "^5.8.13",
    "@types/sinon": "^7.5.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "fetch-mock": "^8.0.0",
    "husky": "^1.3.1",
    "mocha": "^6.2.2",
    "prettier": "^1.16.4",
    "rimraf": "^3.0.0",
    "sinon": "^7.5.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.5.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "abort-controller": "^3.0.0",
    "lodash": "^4.17.15",
    "node-fetch": "^2.6.0",
    "pino": "^5.13.6",
    "pino-pretty": "^3.4.0"
  }
}
