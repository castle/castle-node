{
  "$schema": "http://json.schemastore.org/package",
  "name": "@castleio/sdk",
  "description": "Castle SDK for Node",
  "version": "2.0.0",
  "main": "dist/index.js",
  "repository": "git@github.com:castle/castle-node.git",
  "author": {
    "name": "castle.io",
    "url": "https://castle.io"
  },
  "homepage": "https://github.com/castle/castle-node",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rimraf dist",
    "lint-verify": "tslint -c tslint.json 'src/**/*.ts'",
    "lint-fix": "tslint -c tslint.json --fix '{src,test}/**/*.ts'",
    "build": "tsc",
    "start": "tsc -w",
    "test": "jest --runInBand",
    "prettier-fix": "prettier --write --parser typescript '{src,test}/**/*.ts'",
    "prettier-verify": "yarn prettier --list-different --parser typescript src/**/*.ts",
    "prepush": "yarn build && yarn lint-fix && yarn prettier-verify",
    "prepublishOnly": "yarn build"
  },
  "files": [
    "dist/*"
  ],
  "husky": {
    "hooks": {
      "pre-push": "yarn prepush"
    }
  },
  "devDependencies": {
    "@types/fetch-mock": "7.3.5",
    "@types/jest": "29.1.2",
    "@types/lodash.get": "4.4.7",
    "@types/lodash.isempty": "4.4.7",
    "@types/lodash.merge": "4.6.7",
    "@types/lodash.pickby": "4.6.7",
    "@types/lodash.reduce": "4.6.7",
    "@types/mockdate": "3.0.0",
    "@types/node": "18.11.0",
    "@types/node-fetch": "2.6.2",
    "@types/pino": "7.0.5",
    "fetch-mock": "9.11.0",
    "husky": "8.0.1",
    "jest": "29.2.0",
    "mockdate": "3.0.5",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.21",
    "timeout-signal": "1.1.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "9.0.0",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "abort-controller": "^3.0.0",
    "express": "^4.18.2",
    "lodash.get": "^4.4.2",
    "lodash.isempty": "^4.4.0",
    "lodash.merge": "^4.6.2",
    "lodash.pickby": "^4.6.0",
    "lodash.reduce": "^4.6.0",
    "node-fetch": "< 3",
    "pino": "^8.6.1",
    "pino-pretty": "^9.1.1"
  }
}
