{
  "$schema": "http://json.schemastore.org/package",
  "name": "castle-node",
  "version": "0.4.0-alpha1",
  "main": "dist/index.js",
  "repository": "git@github.com:castle/castle-node.git",
  "author": "johanna@castle.io",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rimraf dist",
    "lint": "tslint -c tslint.json --fix 'src/**/*.ts'",
    "build": "tsc",
    "start": "tsc -w",
    "test": "mocha -r ts-node/register test/**/*.ts",
    "prettier": "prettier --write --parser typescript src/**/*.ts",
    "prepush": "yarn build && yarn lint && yarn prettier && git diff --quiet"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn prepush"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.0",
    "@types/fetch-mock": "^6.0.4",
    "@types/lodash": "^4.14.118",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.10",
    "@types/node-fetch": "^2.1.4",
    "@types/sinon": "^5.0.7",
    "chai": "^4.2.0",
    "fetch-mock": "^7.2.5",
    "husky": "^1.2.0",
    "mocha": "^5.2.0",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.1",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.1"
  },
  "dependencies": {
    "abort-controller": "^2.0.0",
    "lodash": "^4.17.11",
    "node-fetch": "^2.3.0"
  }
}
