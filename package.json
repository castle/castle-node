{
  "$schema": "http://json.schemastore.org/package",
  "name": "@castleio/sdk",
  "version": "0.4.5",
  "main": "dist/index.js",
  "repository": "git@github.com:castle/castle-node.git",
  "author": "castle.io",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rimraf dist",
    "lint": "tslint -c tslint.json --fix 'src/**/*.ts'",
    "build": "tsc",
    "start": "tsc -w",
    "test": "mocha -r ts-node/register test/**/*.ts",
    "prettier": "prettier --write --parser typescript src/**/*.ts",
    "prettier-check": "yarn prettier --list-different --parser typescript src/**/*.ts",
    "prepush": "yarn build && yarn lint && yarn prettier-check",
    "prepublishOnly": "yarn build"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn prepush"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/express": "^4.16.1",
    "@types/fetch-mock": "^7.2.2",
    "@types/lodash": "^4.14.120",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.21",
    "@types/node-fetch": "^2.1.4",
    "@types/pino": "^5.8.6",
    "@types/sinon": "^7.0.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "fetch-mock": "^7.3.0",
    "husky": "^1.3.1",
    "mocha": "^6.0.2",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.7",
    "source-map-support": "^0.5.10",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "abort-controller": "^2.0.3",
    "lodash": "^4.17.11",
    "node-fetch": "^2.3.0",
    "pino": "^5.11.3",
    "pino-pretty": "^2.5.0"
  }
}
