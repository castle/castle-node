{
  "$schema": "http://json.schemastore.org/package",
  "name": "@castleio/sdk",
  "description": "Castle SDK for Node",
  "version": "2.1.0",
  "main": "dist/index.js",
  "repository": "git@github.com:castle/castle-node.git",
  "author": {
    "name": "castle.io",
    "url": "https://castle.io"
  },
  "homepage": "https://github.com/castle/castle-node",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "start": "tsc -w",
    "test": "jest --runInBand",
    "lint-fix": "eslint --fix --quiet '{src,test}/**/*.{js,ts,tsx}' '*.{js,ts,tsx}'",
    "lint-verify": "eslint '{src,test}/**/*.{js,ts,tsx}' '*.{js,ts,tsx}'",
    "prepush": "yarn build && yarn lint-fix && yarn prettier-verify",
    "prepublishOnly": "yarn build"
  },
  "files": [
    "dist/*"
  ],
  "husky": {
    "hooks": {
      "pre-push": "yarn prepush"
    }
  },
  "devDependencies": {
    "@types/fetch-mock": "7.3.5",
    "@types/jest": "29.2.6",
    "@types/lodash.get": "4.4.7",
    "@types/lodash.isempty": "4.4.7",
    "@types/lodash.merge": "4.6.7",
    "@types/lodash.pickby": "4.6.7",
    "@types/lodash.reduce": "4.6.7",
    "@types/node": "18.11.18",
    "@types/node-fetch": "2.6.2",
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "@typescript-eslint/parser": "5.49.0",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "4.2.1",
    "fetch-mock": "9.11.0",
    "husky": "8.0.3",
    "jest": "29.3.1",
    "mockdate": "3.0.5",
    "prettier": "2.8.3",
    "rimraf": "4.1.2",
    "source-map-support": "0.5.21",
    "timeout-signal": "1.1.0",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "abort-controller": "^3.0.0",
    "express": "^4.18.2",
    "lodash.get": "^4.4.2",
    "lodash.isempty": "^4.4.0",
    "lodash.merge": "^4.6.2",
    "lodash.pickby": "^4.6.0",
    "lodash.reduce": "^4.6.0",
    "node-fetch": "< 3",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1"
  }
}
